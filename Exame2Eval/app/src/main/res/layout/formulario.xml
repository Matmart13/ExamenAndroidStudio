<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/foto"
        android:layout_width="146dp"
        android:layout_height="104dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen"
        tools:srcCompat="@drawable/imagen" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:hint="NOMBRE ALUMNO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/curso"
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:hint="CURSO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Hora"
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="228dp"
        android:hint="HORA DEL EXAMEN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Fecha"
        android:layout_width="191dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="292dp"
        android:hint="FECHA DEL EXAMEN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/miRadioButtonGroup"
        android:layout_width="361dp"
        android:layout_height="223dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/miRadioButton2"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Suspender entre 0 y 4" />

        <RadioButton
            android:id="@+id/miRadioButton1"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Aprobado con un 5" />

        <RadioButton
            android:id="@+id/miRadioButton3"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Entre un 6 y un 7" />

        <RadioButton
            android:id="@+id/miRadioButton4"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Entre un 8 y un 10" />

    </RadioGroup>

    <Button
        android:id="@+id/guardar"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="544dp"
        android:onClick="Guarder"
        android:text="GUARDAR"
        app:backgroundTint="#E82727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="280dp">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>